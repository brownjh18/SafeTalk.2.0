# Environment Variables Template
# Copy this file to .env.development or .env.production and fill in your values

# Django Configuration
DJANGO_ENV=development  # or 'production'
DEBUG=True  # Set to False in production
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=127.0.0.1,localhost,testserver

# Database Configuration
DB_NAME=safetalk
DB_USER=safetalk_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@safetalk.com

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Site Configuration
SITE_URL=http://localhost:8000

# Social Authentication
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/accounts/google/login/callback/

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Security Settings
CSP_ENABLED=False  # Set to True in production
HSTS_ENABLED=False  # Set to True in production
MAX_CONCURRENT_SESSIONS=3

# AI Safety
AI_SAFETY_ENABLED=True

# Admin Configuration
ADMIN_EMAILS=admin@safetalk.com

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Video Calling Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY_SID=your_twilio_api_key_sid
TWILIO_API_KEY_SECRET=your_twilio_api_key_secret

ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id

# Payment Services
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Geo-blocking
BLOCKED_COUNTRIES=CU,IR,KP,SY

# Security Monitoring
ENABLE_SECURITY_ALERTS=True
SECURITY_SCAN_INTERVAL=3600