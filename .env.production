# Production Environment Variables
# Copy this file to .env.production and fill in your values
# IMPORTANT: Never commit this file to version control

# Django Configuration
DJANGO_ENV=production
DEBUG=False
SECRET_KEY=your-production-secret-key-here-generate-a-new-one
ALLOWED_HOSTS=your-render-app.onrender.com,www.your-render-app.onrender.com

# Database (PostgreSQL - required for production)
DB_NAME=safetalk_prod
DB_USER=safetalk_prod_user
DB_PASSWORD=your_secure_db_password
DB_HOST=your_render_postgres_host
DB_PORT=5432

# Redis (required for production)
REDIS_URL=redis://your_render_redis_host:6379

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-production-app-password
DEFAULT_FROM_EMAIL=noreply@safetalk.com

# Stripe (live keys for production)
STRIPE_PUBLIC_KEY=pk_live_your_production_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# OpenAI (production key)
OPENAI_API_KEY=your_production_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Site Configuration
SITE_URL=https://your-render-app.onrender.com

# Social Auth (production keys)
GOOGLE_CALENDAR_CLIENT_ID=your_prod_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_prod_google_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=https://your-render-app.onrender.com/accounts/google/login/callback/

FACEBOOK_APP_ID=your_prod_facebook_app_id
FACEBOOK_APP_SECRET=your_prod_facebook_app_secret

# Security Settings (strict for production)
CSP_ENABLED=True
HSTS_ENABLED=True
MAX_CONCURRENT_SESSIONS=3

# AI Safety (enabled for production)
AI_SAFETY_ENABLED=True

# Admin emails (for notifications)
ADMIN_EMAILS=admin@safetalk.com,support@safetalk.com

# Celery (production settings)
CELERY_BROKER_URL=redis://your_render_redis_host:6379/0
CELERY_RESULT_BACKEND=redis://your_render_redis_host:6379/0

# Video calling (production keys)
TWILIO_ACCOUNT_SID=your_prod_twilio_account_sid
TWILIO_AUTH_TOKEN=your_prod_twilio_auth_token
TWILIO_API_KEY_SID=your_prod_twilio_api_key_sid
TWILIO_API_KEY_SECRET=your_prod_twilio_api_key_secret

ZOOM_API_KEY=your_prod_zoom_api_key
ZOOM_API_SECRET=your_prod_zoom_api_secret
ZOOM_ACCOUNT_ID=your_prod_zoom_account_id

# PayPal (production keys)
PAYPAL_CLIENT_ID=your_prod_paypal_client_id
PAYPAL_CLIENT_SECRET=your_prod_paypal_client_secret

# Additional production settings
BLOCKED_COUNTRIES=CU,IR,KP,SY
ENABLE_SECURITY_ALERTS=True
SECURITY_SCAN_INTERVAL=3600