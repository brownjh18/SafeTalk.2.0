# Development Environment Variables
# Copy this file to .env.development and fill in your values

# Django Configuration
DJANGO_ENV=development
DEBUG=True
SECRET_KEY=django-insecure-dev-key-change-in-production
ALLOWED_HOSTS=127.0.0.1,localhost,testserver,0.0.0.0

# Database (SQLite for development)
# No database configuration needed for SQLite

# Redis (optional for development)
REDIS_URL=redis://127.0.0.1:6379/0

# Email Configuration (console backend for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-dev-email@gmail.com
EMAIL_HOST_PASSWORD=your-dev-app-password
DEFAULT_FROM_EMAIL=noreply@safetalk-dev.com

# Stripe (test keys for development)
STRIPE_PUBLIC_KEY=pk_test_your_dev_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_dev_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_dev_webhook_secret

# OpenAI (optional for development)
OPENAI_API_KEY=your_dev_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Site Configuration
SITE_URL=http://localhost:8000

# Social Auth (optional for development)
GOOGLE_CALENDAR_CLIENT_ID=your_dev_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_dev_google_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/accounts/google/login/callback/

FACEBOOK_APP_ID=your_dev_facebook_app_id
FACEBOOK_APP_SECRET=your_dev_facebook_app_secret

# Security Settings (relaxed for development)
CSP_ENABLED=False
HSTS_ENABLED=False
MAX_CONCURRENT_SESSIONS=5

# AI Safety (can be disabled for development)
AI_SAFETY_ENABLED=True

# Admin emails (for notifications)
ADMIN_EMAILS=admin@safetalk-dev.com

# Celery (optional for development)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Video calling (optional for development)
TWILIO_ACCOUNT_SID=your_dev_twilio_account_sid
TWILIO_AUTH_TOKEN=your_dev_twilio_auth_token
TWILIO_API_KEY_SID=your_dev_twilio_api_key_sid
TWILIO_API_KEY_SECRET=your_dev_twilio_api_key_secret

ZOOM_API_KEY=your_dev_zoom_api_key
ZOOM_API_SECRET=your_dev_zoom_api_secret
ZOOM_ACCOUNT_ID=your_dev_zoom_account_id

# PayPal (optional for development)
PAYPAL_CLIENT_ID=your_dev_paypal_client_id
PAYPAL_CLIENT_SECRET=your_dev_paypal_client_secret